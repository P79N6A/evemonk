<div class="row justify-content-center">
    <form>
        <h2>Sign In</h2>

        <label for="email" class="sr-only">Email address</label>
        <input id="email" type="email" class="form-control" value="{{ email }}" placeholder="Email address" autofocus required>

        <label for="password" class="sr-only">Password:</label>
        <input id="password" type="password" value="" class="form-control" placeholder="Password" required>

        <button type="submit" class="sign-in btn btn-primary btn-block">Sign in</button>
    </form>
</div>
